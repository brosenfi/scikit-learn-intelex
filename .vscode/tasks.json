{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make DaaL Debug",
            "type": "shell",
            "command": "./dev/vscode/make_task_wrapper.sh",
            "args": [
                "-j", "daal", "REQDBG=True", "COMPILER=${config:CURRENT_COMPILER}"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "CURRENT_COMPILER": "${config:CURRENT_COMPILER}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Make CleanAll",
            "type": "shell",
            "command": "./dev/vscode/make_task_wrapper.sh",
            "args": [
                "cleanall", "COMPILER=${config:CURRENT_COMPILER}"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "CURRENT_COMPILER": "${config:CURRENT_COMPILER}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Build daal4py",
            "type": "shell",
            "command": "./dev/vscode/build_daal4py.sh",
            "args": [
                "cleanall", "COMPILER=${config:CURRENT_COMPILER}"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "CURRENT_COMPILER": "${config:CURRENT_COMPILER}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}